---
import BaseLayout from '@layouts/BaseLayout.astro';
import Header from '@components/header.astro';
import Footer from '@components/footer.astro';
import { getCollection } from 'astro:content';
import Card from '@components/article-card.astro';

const allArticles = await getCollection('articles').then((articles) =>
  [...articles].sort(
    (a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime()
  )
);
---

<BaseLayout>
  <Header/>
  
  <!-- Breadcrumbs -->
  <nav class="bg-white border-b border-stone-200 py-3">
    <div class="container mx-auto px-4">
      <ol class="flex text-stone-600 text-sm">
        <li><a href="/" class="hover:text-orange-600">Главная</a></li>
        <li class="mx-2">/</li>
        <li class="text-stone-900">Статьи</li>
      </ol>
    </div>
  </nav>

  <main class="bg-stone-50 py-12">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-stone-800 mb-4">Статьи</h1>
        <p class="text-stone-600 max-w-2xl mx-auto text-lg">Экспертные материалы по стабилизации грунтов и дорожному строительству</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
        {allArticles.map((article) => ( 
          <Card article={article} />
        ))}
      </div>
      
      {allArticles.length === 0 && (
        <div class="text-center py-12">
          <p class="text-stone-600 text-lg">Статьи скоро появятся</p>
        </div>
      )}
    </div>
  </main>
  
  <Footer/>
</BaseLayout>