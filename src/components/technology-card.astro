---
import type { CollectionEntry } from 'astro:content';

const { technology } = Astro.props;
const { title, description, icon, date } = technology.data;
---

<div class="technology-card bg-white rounded-xl overflow-hidden shadow-md border border-stone-100">
  <div class="p-6">
    <div class="w-14 h-14 bg-orange-100 rounded-full flex items-center justify-center mb-4">
      <i class={`${icon} text-orange-500 text-2xl`}></i>
    </div>
    
    <div class="flex items-center text-sm text-stone-500 mb-3">
      <i class="far fa-calendar-alt mr-2 text-orange-500"></i>
      <span>{new Date(date).toLocaleDateString('ru-RU')}</span>
    </div>
    
    <h3 class="text-xl font-semibold mb-3 text-stone-800">{title}</h3>
    <p class="text-stone-600 mb-4">{description}</p>
    
    <a href={`/technologies/${technology.slug}`} class="text-orange-600 font-medium hover:text-orange-700 transition duration-300 inline-flex items-center">
      Подробнее
      <i class="fas fa-arrow-right ml-2"></i>
    </a>
  </div>
</div>