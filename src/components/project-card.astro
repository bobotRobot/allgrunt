---
import type { CollectionEntry } from 'astro:content';

const { project } = Astro.props;
const { title, description, location, status, image } = project.data;

// Определяем цвет статуса
const getStatusColor = (status: string) => {
  switch (status.toLowerCase()) {
    case 'завершен':
      return 'bg-green-100 text-green-800';
    case 'в процессе':
      return 'bg-blue-100 text-blue-800';
    case 'планируется':
      return 'bg-yellow-100 text-yellow-800';
    default:
      return 'bg-gray-100 text-gray-800';
  }
};

// Изображение по умолчанию, если не указано
const projectImage = image || "https://images.unsplash.com/photo-1605152276897-4f618f831968?ixlib=rb-4.0.3&auto=format&fit=crop&w=1470&q=80";
---

<div class="project-card bg-white rounded-xl overflow-hidden shadow-md border border-stone-100">
  <img src={projectImage} alt={title} class="w-full h-48 object-cover">
  
  <div class="p-6">
    <div class="flex justify-between items-start mb-3">
      <h3 class="text-xl font-semibold text-stone-800">{title}</h3>
      <span class={`text-xs px-2 py-1 rounded-full ${getStatusColor(status)}`}>{status}</span>
    </div>
    
    <p class="text-stone-600 mb-4">{description}</p>
    
    <div class="flex items-center justify-between">
      <div class="flex items-center text-sm text-stone-500">
        <i class="fas fa-map-marker-alt mr-2 text-orange-500"></i>
        <span>{location}</span>
      </div>
      
      <a href={`/projects/${project.slug}`} class="text-orange-600 font-medium hover:text-orange-700 transition duration-300 inline-flex items-center">
        Подробнее
        <i class="fas fa-arrow-right ml-2"></i>
      </a>
    </div>
  </div>
</div>